@model HtmlPreviewerApp.Models.HtmlModel
<h2>Edit Existing Record</h2>
<div id="content-wrapper">
    <div id="input-area-wrapper">
        <h3>HTML Input</h3>
        <textarea asp-for="HtmlSample" id="input-area" rows="5" cols="20"></textarea>
    </div>
    <div id="btn-wrapper">
        <button id="run">Run</button>
        <button id="save">Save</button>
        <button id="back" onclick="goBack()"><span  class="k-icon k-i-undo"></span>Back</button>
    </div>
    <div id="html-container-wrapper">
        <h3>HTML Preview</h3>
        <div id="iframe-wrapper">
            <iframe id="html-container">
            </iframe>
        </div>
    </div>
</div>
<script>
    var editId = @Model.SampleID;
    function goBack() {
        window.history.back();
    }
    $("#run").click(function () {
        var html = $("#input-area").val();
        var doc = $("#html-container")[0].contentWindow.document;
        var $body = $('body', doc);
        $body.html(html);
    });
    $("#save").click(function () {
        var html = $("#input-area").val();
        $.ajax({
            type: "POST",
            url: "/Home/Index",
            data: { "html": html, "editId": editId },
            success: function (response) {
                alert("record updated!");
                $("#grid").data("kendoGrid").dataSource.read();
                editId = null;
            }
        });

    })
</script>
<style>
    #content-wrapper {
        display: flex;
        justify-content: space-between;
    }
    .k-i-undo {
        margin-top: -2px !important;
        margin-right: 3px !important;
        font-size: 12px !important;
    }
    #btn-wrapper {
        margin-left: 15px;
        margin-right: 15px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 150px;
        flex-wrap: wrap;
    }

        #btn-wrapper button {
            width: 100%;
            color: #060606;
            padding-top: 10px;
            padding-bottom: 10px;
            background: #ececec;
            border: 1px solid gray;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

            #btn-wrapper button:hover {
                background: #f35800;
                color: white;
                border: 1px solid transparent;
            }

            #btn-wrapper button:active {
                outline: none;
            }

    button#save {
        margin-top: 15px;
        margin-bottom: 15px;
    }

    #input-area-wrapper, #html-container-wrapper {
        width: 40%;
    }

    #input-area {
        resize: none;
        height: 350px;
        width: 100%;
        border: 1px solid lightgrey;
        padding: 5px;
    }

    #html-container {
        border: 1px solid lightgrey;
        height: 350px;
        padding: 5px;
    }

    *:focus {
        outline: none;
    }
</style>
